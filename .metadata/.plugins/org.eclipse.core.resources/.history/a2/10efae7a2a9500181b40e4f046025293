package com.zzu.leetcode.second;

public class Seven {
    public int reverse(int x) {
        //  result表示 x 逆序的结果， last 是temp的最后一个数字
        long result = 0;
		 int last = 0;
	        while(x!=0){
	            last = x % 10;
	            result = result *10 + last;
	            x = (x - last)/10;
	        }
	        if((result>Math.pow(2,31)-1)||(result < Math.pow(-2,31))) result = 0;
	        return (int)result;
    }
}